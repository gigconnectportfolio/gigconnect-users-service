{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:import/typescript",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "no-multiple-empty-lines": [2, {"max": 2}],
        "semi": [2, "always"],
        "curly": "warn",
        "prefer-template": ["warn"],
        "space-before-function-paren": [0, {
            "anonymous": "always",
            "named": "always"
        }],
        "camelcase": 0,
        "no-return-assign": 0,
        "quotes": ["error", "single"]
    }
}
